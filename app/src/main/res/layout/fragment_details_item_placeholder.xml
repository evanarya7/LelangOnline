<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shimmer_view_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.details.DetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/plc_thumbnail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/grayDarkColor"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintDimensionRatio="H,16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/plc_thumbnail">

            <LinearLayout
                android:id="@+id/plc_itemHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/mp_m"
                android:paddingVertical="@dimen/mp_s">

                <RelativeLayout
                    android:id="@+id/plc_subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/mp_s"
                    android:background="@color/grayLightColor"
                    android:paddingHorizontal="@dimen/mp_s"
                    android:paddingVertical="@dimen/mp_s"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/thumbnail">

                    <View
                        android:id="@+id/plc_bidCount"
                        android:layout_width="96dp"
                        android:layout_height="@dimen/material_text_subhead"
                        android:layout_marginVertical="@dimen/mp_xs"
                        android:background="@drawable/placeholder_block" />

                    <View
                        android:id="@+id/plc_timer"
                        android:layout_width="160dp"
                        android:layout_height="@dimen/material_text_subhead"
                        android:layout_alignParentEnd="true"
                        android:layout_marginVertical="@dimen/mp_xs"
                        android:background="@drawable/placeholder_block" />

                </RelativeLayout>

                <View
                    android:id="@+id/plc_itemName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/material_text_headline"
                    android:layout_marginVertical="@dimen/mp_xs"
                    android:background="@drawable/placeholder_block" />

                <View
                    android:id="@+id/plc_itemPrice"
                    android:layout_width="160dp"
                    android:layout_height="@dimen/material_text_subhead"
                    android:layout_marginVertical="@dimen/mp_xs"
                    android:background="@drawable/placeholder_block" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/plc_itemStart"
                        android:layout_width="224dp"
                        android:layout_height="@dimen/material_text_title"
                        android:layout_marginVertical="@dimen/mp_xs"
                        android:background="@drawable/placeholder_block" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/mp_s"
                android:background="@color/grayLightColor" />

            <LinearLayout
                android:id="@+id/itemDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/mp_m"
                android:paddingVertical="@dimen/mp_s">

                <View
                    android:layout_width="160dp"
                    android:layout_height="@dimen/material_text_title"
                    android:layout_marginVertical="@dimen/mp_xs"
                    android:background="@drawable/placeholder_block" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/material_text_body1"
                    android:layout_marginVertical="@dimen/mp_xs"
                    android:background="@drawable/placeholder_block" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/material_text_body1"
                    android:layout_marginVertical="@dimen/mp_xs"
                    android:background="@drawable/placeholder_block" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/material_text_body1"
                    android:layout_marginVertical="@dimen/mp_xs"
                    android:background="@drawable/placeholder_block" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/material_text_body1"
                    android:layout_marginVertical="@dimen/mp_xs"
                    android:background="@drawable/placeholder_block" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/material_text_body1"
                    android:layout_marginVertical="@dimen/mp_xs"
                    android:background="@drawable/placeholder_block" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>