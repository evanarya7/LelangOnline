<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shimmer_view_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/container_padding_bottom">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:padding="@dimen/mp_m">

                <View
                    android:id="@+id/plc_thumbnail"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@color/grayDarkColor" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/mp_sm0"
                    android:layout_toEndOf="@id/plc_thumbnail"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/plc_profile_name"
                        android:layout_width="256dp"
                        android:layout_height="@dimen/material_text_title"
                        android:layout_marginVertical="@dimen/mp_xs"
                        android:background="@drawable/placeholder_block" />

                    <View
                        android:id="@+id/plc_profile_active"
                        android:layout_width="128dp"
                        android:layout_height="@dimen/material_text_body1"
                        android:layout_marginVertical="@dimen/mp_xs"
                        android:background="@drawable/placeholder_block" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/mp_s"
                android:background="@color/grayLightColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:orientation="vertical">

                <View
                    android:layout_width="192dp"
                    android:layout_height="@dimen/material_text_title"
                    android:layout_marginVertical="@dimen/mp_sm1"
                    android:layout_marginStart="@dimen/mp_m"
                    android:background="@drawable/placeholder_block" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/mp_m"
                        android:layout_marginVertical="@dimen/mp_s"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/material_text_subhead"
                            android:layout_marginVertical="@dimen/mp_xs"
                            android:background="@drawable/placeholder_block" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/material_text_body1"
                            android:layout_marginVertical="@dimen/mp_xs"
                            android:background="@drawable/placeholder_block" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/mp_m"
                        android:layout_marginVertical="@dimen/mp_s"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/material_text_subhead"
                            android:layout_marginVertical="@dimen/mp_xs"
                            android:background="@drawable/placeholder_block" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/material_text_body1"
                            android:layout_marginVertical="@dimen/mp_xs"
                            android:background="@drawable/placeholder_block" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/mp_m"
                        android:layout_marginVertical="@dimen/mp_s"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/material_text_subhead"
                            android:layout_marginVertical="@dimen/mp_xs"
                            android:background="@drawable/placeholder_block" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/material_text_body1"
                            android:layout_marginVertical="@dimen/mp_xs"
                            android:background="@drawable/placeholder_block" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</com.facebook.shimmer.ShimmerFrameLayout>